//Move Between Screen Code
playSound("muscle.mp3", true);


onEvent("flyButtonGenes", "click", function( ) {
  stopSound("muscle.mp3");
  playSound("fly-noise-sound.mp3", false);
  setScreen("flyPage");
});

onEvent("backToScreen", "click", function( ) {
  playSound("muscle.mp3", false);
  stopSound("fly-noise-sound.mp3");
  playSound("sound://category_bell/quiet_bell_notification.mp3", false);
  setScreen("TitlePage");
});

onEvent("redBullBullButton", "click", function( ) {
  stopSound("muscle.mp3");
  playSound("Cow-moo-sound-1-.mp3", false);
  setScreen("redbullPage");
});

onEvent("bacc", "click", function( ) {
  playSound("muscle.mp3", false);
  stopSound("Cow-moo-sound-1-.mp3");
  playSound("sound://category_bell/quiet_bell_notification.mp3", false);
  setScreen("TitlePage");
});

onEvent("slingshotButton", "click", function( ) {
  stopSound("muscle.mp3");
  playSound("Angry-Birds-Theme-Song.mp3", false);
  setScreen("slingshotPage");
});

onEvent("backToMainPageButton", "click", function( ) {
  playSound("muscle.mp3", false);
  stopSound("Angry-Birds-Theme-Song.mp3");
  playSound("sound://category_bell/quiet_bell_notification.mp3", false);
  setScreen("TitlePage");
});

onEvent("planeButton", "click", function( ) {
  stopSound("muscle.mp3");
  playSound("gpws.mp3", false);
  setScreen("planePage");
});

onEvent("rearward", "click", function( ) {
  playSound("muscle.mp3", false);
  stopSound("gpws.mp3");
  playSound("sound://category_bell/quiet_bell_notification.mp3", false);
  setScreen("TitlePage");
});

onEvent("birdWingButton", "click", function( ) {
  stopSound("muscle.mp3");
  playSound("wings.mp3", false);
  setScreen("attachmentBirdPage");
});

onEvent("buttonThatReturnsUserToMainPage", "click", function( ) {
  playSound("muscle.mp3", false);
  stopSound("wings.mp3");
  playSound("sound://category_bell/quiet_bell_notification.mp3", false);
  setScreen("TitlePage");
});

onEvent("creativeModeButton", "click", function( ) {
  stopSound("muscle.mp3");
  playSound("piano2.mp3", false);
  setScreen("creativemodePage");
});

onEvent("backToTheLobby", "click", function( ) {
  playSound("muscle.mp3", false);
  stopSound("piano2.mp3");
  playSound("sound://category_bell/quiet_bell_notification.mp3", false);
  setScreen("TitlePage");
});

//Animations and other entertainment
onEvent("angryBirdsEggs", "click", function( ) {
  hideElement("angryBirdsEggs");
  playSound("Funny-Scream-A1-www.fesliyanstudios.com.mp3", false);
  showElement("omlette");
});
